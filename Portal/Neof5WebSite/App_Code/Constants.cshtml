@helper MASTER_SITE_HOSTPORT() {
    var hostport = HttpContext.Current.IsDebuggingEnabled
        ? HttpContext.Current.Request.Url.Host + ":49368"
	    : "neof5master.azurewebsites.net:80";
<text>@hostport</text>}

@helper SITE_TOP_URL() {
    var url = HttpContext.Current.Request.Url;
    var port = url.Port;
    var portstr = port == 80 ? "" : ":"+port;
	var output = string.Format("{0}://{1}{2}/", url.Scheme, url.Host, portstr);
<text>@output</text>}