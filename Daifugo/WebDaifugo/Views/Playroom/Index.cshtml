@model WebDaifugo.Controllers.PlayroomController.ViewModel
@{
    ViewBag.Title = "プレイルーム一覧";
}
<div class="container">

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
		<h3>[ルールＡ]</h3>
        @foreach (var item in Model.RoomsA)
        {
            <a class="tile bg-color-blue" href="/playroom/room/@item.Key">
                <strong>@(item.Value == null || item.Value.Master.NumOfPlayers==0 ? "空き" : item.Value.Master.IsPlaing ? "プレイ中" : "★受付中")</strong>
                <p>@item.Key</p>
            </a>
        }
		<div class="clearfix"></div>
	</div>
    <div class="col-sm-10 col-sm-offset-1">
		<h3>[ルールＢ]</h3>
        @foreach (var item in Model.RoomsB)
        {
            <a class="tile bg-color-orange" href="/playroom/room/@item.Key">
                <strong>@(item.Value == null || item.Value.Master.NumOfPlayers==0 ? "空き" : item.Value.Master.IsPlaing ? "プレイ中" : "★受付中")</strong>
                <p>@item.Key</p>
            </a>
        }
		<div class="clearfix"></div>
    </div>
</div>
</div>