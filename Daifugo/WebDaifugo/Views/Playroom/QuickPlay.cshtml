@{
    ViewBag.Title = "クイックプレイ";
}
<div class="container">

    <div class="jumbotron">
        <h1>@ViewBag.Title</h1>
        <p>
            プレイするには、WebSocketに対応したブラウザである必要があります。
        </p>
        <p id="ok" style="display: none">
            <button class="btn btn-danger btn-lg" role="button" id="btnB">開始</button>
        </p>
        <p id="ng" style="display: none" class="danger">ご利用のブラウザは WebSocket 対応でないたプレイ出来ません。</p>
    </div>
</div>

@section Scripts{
<script type="text/javascript">
	$(function () {
		if (!WebSocket) {
			$('#ng').fadeIn();
			alert('NG');
		} else {
			$('#ok').fadeIn();
		}
	});
	
	function startNewWindow(rule,name) {
		window.open('quickplay/'+rule+'/?name='+name, '_blank', 'width=800,height=440,scrollbars=auto,resizable=yes');  
	}

	$('#btnA').click(function () { startNewWindow('A', 'あなた'); });
	$('#btnB').click(function () { startNewWindow('B', 'あなた'); });
</script>
}
